<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNickNameInMyBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/koddiextrabold"
        android:text="짱아찌"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvMbtiInMyBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvNickNameInMyBlog"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tvNickNameInMyBlog"
        android:text="ISFP"
        android:textStyle="bold"
        android:textColor="@color/signature_color"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvFollowingTextInMyBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNickNameInMyBlog"
        android:layout_alignStart="@+id/tvNickNameInMyBlog"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:text="팔로잉"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvFollowingNumberInMyBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/tvFollowingTextInMyBlog"
        android:layout_alignBottom="@+id/tvFollowingTextInMyBlog"
        android:textColor="@color/black"
        android:layout_marginRight="3dp"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/wallInMyBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvFollowingTextInMyBlog"
        android:layout_toRightOf="@+id/tvFollowingNumberInMyBlog"
        android:text="|"
        android:textColor="@color/gray"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/tvFollowerTextInMyBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로워"
        android:layout_toRightOf="@+id/wallInMyBlog"
        android:layout_alignBottom="@+id/tvFollowingTextInMyBlog"
        android:textColor="@color/black"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvFollowerNumberInMyBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/tvFollowingTextInMyBlog"
        android:layout_toRightOf="@+id/tvFollowerTextInMyBlog"
        android:textColor="@color/black"
        android:textSize="12dp" />

