<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLongReviewItemInBlog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgMovIconLongReviewInMyBlog"
        android:layout_width="9dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvMovNameInLongReviewMyblog"
        android:layout_alignBottom="@+id/tvMovNameInLongReviewMyblog"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/imgMovInLongReviewMyBlog"
        android:adjustViewBounds="true"
        android:clipToOutline="true"
        android:src="@drawable/movie_circle" />

    <TextView
        android:id="@+id/tvMovNameInLongReviewMyblog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgMovInLongReviewMyBlog"
        android:layout_toRightOf="@+id/imgMovIconLongReviewInMyBlog"
        android:text="살인의 추억"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgMovInLongReviewMyBlog"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_rectangle"
        android:src="@drawable/movie_poster4" />


