<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayoutInModifyLongReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBarInModifyLongReview"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/review_top_app_bar"
            app:navigationIcon="@drawable/back_simple_small"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>


    <EditText
        android:id="@+id/edtTitleInModifyLongReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbarLayoutInModifyLongReview"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:hint="제목을 입력하세요"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edtReviewModifyLongReview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edtTitleInModifyLongReview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="top"
        android:hint="내용을 입력하세요"
        android:textSize="15dp" />


</RelativeLayout>