<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvMovieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageMovieDetail"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imageMovieDetail"
        android:text="콜 미 바이 유어 네임"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageMovieDetail"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_rectangle"
        android:clipToOutline="true"
        android:src="@drawable/movie_poster1" />

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMovieName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageMovieDetail"
        android:text="드라마"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvGenre"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tvGenre"
        android:text="이탈리아"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvRunningTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvGenre"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tvCountry"
        android:text="132분"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGenre"
        android:layout_alignStart="@id/tvGenre"
        android:layout_marginTop="10dp"
        android:text="2022.10.04"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <!--    <TextView-->
    <!--        android:id="@+id/tvDirector"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/tvReleaseDate"-->
    <!--        android:layout_alignStart="@id/tvGenre"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:text="루카 구아다니노"-->
    <!--        android:textColor="@color/black"-->
    <!--        android:textSize="15dp" />-->

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingBarInDetail"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvReleaseDate"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageMovieDetail" />
    <!--    <View-->
    <!--        android:id="@+id/wall1"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="5dp"-->
    <!--        android:layout_below="@id/imageMovieDetail"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:layout_marginBottom="10dp"-->
    <!--        android:background="@color/lightGray" />-->

    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageMovieDetail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="1983년 이탈리아, 열 일곱 소년 Elio(티모시 샬라메)는 아름다운 햇살이 내리쬐는 가족 별장에서 여름이 끝나기만을 기다리고 있다 어느 오후, 스물 넷 청년 Oliver(아미 해머)가 아버지(마이클 스..."
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvReadMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvSummary"
        android:layout_alignBottom="@+id/tvSummary"
        android:layout_marginRight="5dp"
        android:text="더보기"
        android:textColor="@color/darkGray"
        android:textSize="15dp"
        android:textStyle="bold" />
    <!--    <View-->
    <!--        android:id="@+id/wall2"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="2dp"-->
    <!--        android:background="@color/lightGray"-->
    <!--        android:layout_below="@id/imageMovieDetail"-->
    <!--        android:layout_alignTop="@+id/reviewSelectLayout"-->

    <!--        />-->

    <LinearLayout
        android:id="@+id/reviewSelectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSummary"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTabBarLongReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/line_rectangle"
            android:text="감상평"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvTabBarShortReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/filled_rectangle"
            android:text="한 줄 느낌"
            android:textAlignment="center"
            android:textColor="@color/darkGray"
            android:textSize="15dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reviewSelectLayout" />
    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingbarInShortReview"
        android:layout_below="@+id/reviewSelectLayout"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_alignStart="@id/edtShortReview"
        android:visibility="invisible"
        />
    <EditText
        android:id="@+id/edtShortReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingbarInShortReview"
        android:background="@drawable/line_rectangle_90"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        />


</RelativeLayout>
