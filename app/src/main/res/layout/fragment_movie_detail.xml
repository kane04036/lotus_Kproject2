<!--        android:background="@color/lightGray" />-->

    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageMovieDetail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="1983년 이탈리아, 열 일곱 소년 Elio(티모시 샬라메)는 아름다운 햇살이 내리쬐는 가족 별장에서 여름이 끝나기만을 기다리고 있다 어느 오후, 스물 넷 청년 Oliver(아미 해머)가 아버지(마이클 스..."
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvReadMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvSummary"
        android:layout_alignBottom="@+id/tvSummary"
        android:layout_marginRight="5dp"
        android:text="더보기"
        android:textColor="@color/darkGray"
        android:textSize="15dp"
        android:textStyle="bold" />
<!--    <View-->
