<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tvMovieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageMovieDetail"
        android:layout_alignTop="@id/imageMovieDetail"
        android:layout_marginLeft="5dp"
        android:text="콜 미 바이 유어 네임"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageMovieDetail"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_rectangle"
        android:clipToOutline="true"
        android:src="@drawable/movie_poster1" />

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imageMovieDetail"
        android:layout_below="@+id/tvMovieName"
        android:text="드라마"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvGenre"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tvGenre"
        android:text="이탈리아"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvRunningTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvGenre"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tvCountry"
        android:text="132분"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.10.04"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@+id/tvGenre"
        android:layout_alignStart="@id/tvGenre"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tvDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReleaseDate"
        android:layout_alignStart="@id/tvGenre"
        android:layout_marginTop="10dp"
        android:text="루카 구아다니노"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingBarInDetail"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvDirector"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageMovieDetail"
     />
<!--    <View-->
<!--        android:id="@+id/wall1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="5dp"-->
<!--        android:layout_below="@id/imageMovieDetail"-->
<!--        android:layout_marginTop="10dp"-->
