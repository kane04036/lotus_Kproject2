<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvMovNameShortReviewInSearchResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingbarShortReviewInSearchResult"
        android:layout_toLeftOf="@+id/tvMbtiShortReviewInSearchResult"
        android:text="살인의 추억"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="bold" />

<!--    <ImageView-->
<!--        android:id="@+id/imgMovInShortReviewSearchResult"-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/tvMovNameShortReviewInSearchResult"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:adjustViewBounds="true"-->
<!--        android:src="@drawable/movie_poster4" />-->
    <TextView
        android:id="@+id/tvMbtiShortReviewInSearchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/tvNicknameShortReviewInSearchResult"
        android:text="ISFP"
        android:textColor="@color/signature_color"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNicknameShortReviewInSearchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvMbtiShortReviewInSearchResult"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/imgMoreShortReviewInSearchResult"
        android:text="짱아찌"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingbarShortReviewInSearchResult"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/tvMbtiShortReviewInSearchResult"
        app:mrb_progressBackgroundTint="@color/gray"
        app:mrb_progressTint="@color/signature_color"
        app:mrb_secondaryProgressTint="@color/gray" />

    <ImageView
        android:id="@+id/imgMoreShortReviewInSearchResult"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvNicknameShortReviewInSearchResult"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/more" />

    <TextView
        android:id="@+id/tvShortReviewWritingInSearchResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMovNameShortReviewInSearchResult"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="영화 봤는데 진짜 재밌더라"
        android:textColor="@color/black"
        android:textSize="12dp" />
    <ImageView
        android:id="@+id/imgThumbUpInShortReviewSearchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thumb_up_small"
        android:layout_alignBottom="@+id/tvThumbUpNumInShortReviewSearchResult"
        android:layout_toLeftOf="@id/tvThumbUpNumInShortReviewSearchResult"
        />

    <TextView
        android:id="@+id/tvThumbUpNumInShortReviewSearchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/tvShortReviewWritingInSearchResult"
        android:text="120"
        android:textColor="@color/black"
        android:textSize="12dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tvThumbUpNumInShortReviewSearchResult"
        android:layout_marginTop="5dp"
        android:background="@color/lightGray" />


</RelativeLayout>