<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/detailTopBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/detailTopBar"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/back_small"
            app:title="movieName"
            app:menu="@menu/detail_top_bar"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/imageMovieDetail"
        android:layout_width="135dp"
        android:layout_height="200dp"
        android:layout_below="@+id/detailTopBarLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_rectangle"
        android:clipToOutline="true"
        android:src="@drawable/movie_poster1" />

    <TextView
        android:id="@+id/tvMovieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageMovieDetail"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageMovieDetail"
        android:text="영화제목이여요"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvYearOfMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMovieName"
        android:layout_alignStart="@+id/tvMovieName"
        android:text="2021" />

    <TextView
        android:id="@+id/tvGenre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYearOfMovie"
        android:layout_alignStart="@+id/tvMovieName"
        android:layout_marginTop="10dp"
        android:background="@drawable/genre_round_rectangle"
        android:text="#스릴러" />

    <TextView
        android:id="@+id/tvGenre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvGenre1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tvGenre1"
        android:background="@drawable/genre_round_rectangle"
        android:text="#미스테리" />

    <TextView
        android:id="@+id/tvGenre3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvGenre1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tvGenre2"
        android:background="@drawable/genre_round_rectangle"
        android:text="#호러" />

