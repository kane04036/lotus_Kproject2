<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageMovieResult"
            android:layout_width="112dp"
            android:layout_height="166dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:elevation="20dp"
            android:background="@drawable/round_rectangle"
            android:src="@drawable/movie_poster4" />

        <TextView
            android:id="@+id/tvMovieNameResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageMovieResult"
            android:layout_alignStart="@id/imageMovieResult"
            android:layout_alignEnd="@+id/imageMovieResult"
            android:layout_centerInParent="true"
            android:text="movie"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </RelativeLayout>


</LinearLayout>